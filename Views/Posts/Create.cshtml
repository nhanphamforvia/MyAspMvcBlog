@using MyAspMvcPost.Entities
@model Post

@{
    ViewData["Title"] = "Create Post";
}

<div class="container" style="max-width: 940px;">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2>Create Post</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        @* <div asp-validation-summary="All" class="text-danger"></div> *@
                        <div class="form-group mb-3">
                            <label asp-for="Title" class="form-label">Title</label>
                            <input asp-for="Title" class="form-control" placeholder="Enter a title" />
                            <span asp-validation-for="Title" class="text-danger mt-1"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Content" class="form-label">Content</label>
                            <input asp-for="Content" row="5" class="form-control" placeholder="Enter what you did that day" />
                            <span asp-validation-for="Content" class="text-danger mt-1"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Image" class="form-label">Image</label>
                            <input asp-for="Image" class="form-control" placeholder="Enter an Image url" />
                            <span asp-validation-for="Image" class="text-danger mt-1"></span>
                        </div>
                        @* <div class="form-group mb-3">
                            <label asp-for="Created" class="form-label">Date</label>
                            <input asp-for="Created" class="form-control" type="date" />
                            <span asp-validation-for="Created" class="text-danger mt-1"></span>
                        </div> *@
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">Create</button>
                            <a asp-asp-controller="Posts" asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form> 
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
